extends layout

block content

    div(class="row")
        div(class="col-md-4")
            ul(class="hidden-element", id="users")
        div(class="col-md-8")
            div(class="col-md-12 hidden-element", id="messages")
            div(class="col-md-12")
                form(class="hidden-element form-horizontal", id="messageForm", action="/", method="post")
                    div(class="form-group")
                        input(type="text", name="message", id="message", class="form-control", placeholder="My message...")

    div(class="row")
        div(class="col-md-offset-3 col-md-6")
            form(class="form-horizontal", id="loginForm", action="/", method="post")
                div(class="form-group")
                    label(for="email", class="col-sm-2 control-label") Email
                    div(class="col-sm-10")
                        input(type="text", name="email", class="form-control", id="email", placeholder="Email")
                div(class="form-group")
                    label(for="password", class="col-sm-2 control-label") Password
                    div(class="col-sm-10")
                        input(type="password", name="password", class="form-control", id="password", placeholder="Password")
                div(class="form-group")
                    div(class="col-sm-offset-2 col-sm-10 text-right")
                        input(type="submit", class="btn btn-default", value="Sign in")